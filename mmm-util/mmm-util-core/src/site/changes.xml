    <release version="1.0.1" date="2008-02-10" description="Subsequent release">
      <action dev="hohwille" type="add">
        <![CDATA[
        <code>net.sf.mmm.util.file</code>: added.
        ]]>
      </action>
      <action dev="hohwille" type="add">
        <![CDATA[
        <code>net.sf.mmm.util.event</code>: added.

<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  
  <import resource="classpath:net/sf/mmm/util/lang/beans-util-lang.xml" />
  <import resource="classpath:net/sf/mmm/util/math/beans-util-math.xml" />
  <import resource="classpath:net/sf/mmm/util/date/beans-util-date.xml" />
  <import resource="classpath:net/sf/mmm/util/reflect/beans-util-reflect.xml" />

  <bean id="net.sf.mmm.util.value.api.StringValueConverter" class="net.sf.mmm.util.value.base.StringValueConverterImpl"/>
  <bean id="net.sf.mmm.util.value.api.ComposedValueConverter" class="net.sf.mmm.util.value.impl.ComposedValueConverterImpl">
    <property name="converters">
      <list>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToDate"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToCalendar"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToNumber"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToString"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToEnum"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToCollection"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfBoolean"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfByte"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfDouble"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfFloat"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfInt"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfLong"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfObject"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToArrayOfShort"/>
        <bean class="net.sf.mmm.util.value.impl.ValueConverterToCompatiblePojo"/>
      </list>
    </property>
  </bean>
  
</beans>
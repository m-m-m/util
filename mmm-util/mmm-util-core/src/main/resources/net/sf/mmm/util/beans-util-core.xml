<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <context:annotation-config/>
  <context:component-scan base-package="net.sf.mmm.util"/>

  <bean class="net.sf.mmm.util.component.impl.SpringContainerBean"/>

  <beans profile="default">
    <bean id="java.util.concurrent.Executor" class="net.sf.mmm.util.concurrent.base.SimpleExecutor"/>
    <bean id="net.sf.mmm.util.lang.api.EnumProvider" class="net.sf.mmm.util.lang.base.SimpleEnumProvider"/>
    <!-- ATTENTION: It is important that EnvironmentDetector is initialized lazily, as profiles may be set after context setup (e.g. when using ClassPathXmlApplicationContext) -->
    <bean id="net.sf.mmm.util.lang.api.EnvironmentDetector" class="net.sf.mmm.util.lang.base.EnvironmentDetectorSpringProfileImpl" lazy-init="true"/>
    <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />
  </beans>

  <beans profile="server">
    <bean id="java.util.concurrent.Executor" class="net.sf.mmm.util.concurrent.base.CachedThreadPoolExecutor"/>
  </beans>

</beans>
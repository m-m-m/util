<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <import resource="classpath:net/sf/mmm/util/beans-util-core.xml" />

  <context:component-scan base-package="net.sf.mmm.service.impl.spring.server"/>

  <bean name="RemoteInvocationServiceExporter" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
    <property name="service" ref="RemoteInvocationGenericServiceImplSpring" />
    <property name="serviceInterface" value="net.sf.mmm.service.base.RemoteInvocationGenericService"/>
  </bean>

</beans>